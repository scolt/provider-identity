html
    head
        title='Interview Assistant Login'
        base(href=pathname + '/' + adapterId + '/')
        meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
        meta(name='charset' content='UTF-8')
        link(href='styles.css' rel='stylesheet')
        link(rel='preconnect' href='https://fonts.gstatic.com')
        link(rel=' stylesheet' href='https://fonts.googleapis.com/css2?family=Oswald:wght@300&display=swap')
        script(src='https://kit.fontawesome.com/2bf6f1b5d2.js' crossorigin='anonymous')
    body
        div(class="background")
        div(class='login-container')
            h1='Login / Sign Up'
                span(class='application-name') Interview Platform

            section(class='social-links')
                a(href='facebook?redirect_uri=' + redirectUrl) <i class="fab fa-facebook-square"></i>
                a(href='vk?redirect_uri=' + redirectUrl) <i class="fab fa-vk"></i>
                a(href='github?redirect_uri=' + redirectUrl) <i class="fab fa-github-square"></i>


